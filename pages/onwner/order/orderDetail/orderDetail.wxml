<!--pages/onwner/vistResig/vistResig.wxml-->
<view class="vistResig">
  <view class="card info">
    <view>预约项目</view>
    <view class="mt20 des">文化馆-老城保护中心</view>
  </view>
  <view class="card mt20">
    <van-cell-group>
      <van-cell title="到访时间" value="{{ time }}" 
        border="{{ false }}">
      </van-cell>
      <van-calendar color="#4790F4" show="{{ calendarShow }}" bind:close="onClose" bind:confirm="onConfirm"
        data-type="calendarShow" show-confirm="{{ false }}" />
    </van-cell-group>
  </view>
  <view class="card mt20">
    <van-cell-group>
      <van-cell title="来访人员" value="{{ renyuan }}人" 
        border="{{ false }}">
      </van-cell>
    </van-cell-group>
  </view>
  <view class="card mt20">
    <van-cell-group>
      <van-cell title="登记联系人" border="{{ false }}"/>
      
    </van-cell-group>
    <van-cell-group inset>
      <van-cell title="联系人" value="任芳" border="{{ false }}"/>
      <van-cell title="联系号码" value="12939124" border="{{ false }}"/>
      <van-cell title="身份证号" value="34*********2342" border="{{ false }}"/>
    </van-cell-group>
  </view>

  <view class="mt20">
    <van-cell border="{{ false }}" title="是否驾车">
      <van-switch slot="right-icon" disabled size="18px" checked="{{ checked }}" active-color="#FFA477" inactive-color="#fff"
        bind:change="onChange" />
    </van-cell>
  </view>
  <view class="plate">
    <view class="carNumber-items">
      <view class="carNumber-items-box">
        <view class="carNumber-items-province carNumber-items-box-list">{{carnum[0] || ''}}</view>
        <view class="carNumber-items-En carNumber-items-box-list">{{carnum[1] || ''}}</view>
      </view>
      <!-- 常规 -->
      <view class="carNumber-item" >{{carnum[2] || ''}}</view>
      <view class="carNumber-item" >{{carnum[3] || ''}}</view>
      <view class="carNumber-item" >{{carnum[4] || ''}}</view>
      <view class="carNumber-item" >{{carnum[5] || ''}}</view>
      <view class="carNumber-item" >{{carnum[6] || ''}}</view>
      <!-- 新能源 -->
      <view class="carNumber-item {{showNewPower ? '': 'carNumber-item-newpower'}}">
        <view wx:if="{{!showNewPower}}" bindtap='showPowerBtn'>
          <view class="carNumber-newpower-add">+</view>
          <view>新能源</view>
        </view>
        <view wx:if="{{showNewPower}}" >
          {{carnum[7]}}
        </view>
      </view>
    </view>
  </view>
  <view class="card mt30">
    <van-cell-group>
      <van-cell border="{{ false }}" title="来访备注" label="描述信息描述信息描述信息描述信息描述信息描述信息描述信息"/>
        <!-- <van-field disabled model:value="{{ bz }}" placeholder="请输入" border="{{ false }}" /> -->
    </van-cell-group>
  </view>
  <view class="keyboard" hidden='{{!KeyboardState}}'>
    <view class="keyboardClose">
      <view class="keyboardClose_btn" bindtap='closeKeyboard'>关闭</view>
    </view>
    <!-- 省份简写键盘 -->
    <view class="keyboard-item" hidden="{{carnum[0]}}">
      <view class="keyboard-line" wx:for="{{provinces}}" wx:key="{{index}}">
        <view class="keyboard-btn" wx:for="{{item}}" wx:key="{{index}}" data-val="{{itemlist}}" wx:for-item="itemlist" bindtap='bindChoose'>{{itemlist}}</view>
      </view>
      <view class="keyboard-del" bindtap='bindDelChoose'>
        <van-icon name="delete-o" size="24"/>
      </view>
    </view>
    <!-- 车牌号码选择键盘 -->
    <view class="keyboard-item iscarnumber" hidden="{{!carnum[0]}}">
      <view class="keyboard-line" wx:for="{{numbers}}" wx:key="{{index}}">
        <view class="keyboard-btn" wx:for="{{item}}" wx:key="{{index}}" data-val="{{itemlist}}" wx:for-item="itemlist" bindtap='bindChoose'>{{itemlist}}</view>
      </view>
      <view class="keyboard-del" bindtap='bindDelChoose'>
        <van-icon name="delete-o" size="24"/>
      </view>
    </view>
  </view>
  <view class="btn">
    <van-button type="info" block bindtap="toDetail">查看二维码</van-button>
  </view>
</view>