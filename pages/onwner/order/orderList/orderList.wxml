<!--pages/onwner/order/orderList/orderList.wxml-->
<view class="orderList">
  <van-overlay show="{{ isLoad }}" z-index="99">
    <view class="loading">
      <van-loading />
    </view>
  </van-overlay>
  <van-tabs bind:click="onClick" active="{{ active }}" color="#FFA477" sticky> 
    <van-tab title="待审核" title-style="{{current == 0?'font-weight:700;':''}}">
      <view class="card" wx:if="{{!list.length == 0}}">
        <view class="item" wx:for="{{list}}" wx:key="index" data-id="{{item.id}}" bindtap="toDetail">
          <view class="itemTop">
            <view class="itemL">
              {{item.project_name}}
            </view>
            <view class="itemR">
              {{item.date}}
            </view>
          </view>
          <view class="des">
            {{item.area_name}}{{item.house_name}}
          </view>
        </view>
      </view>
      <view class="card" wx:else>
        <van-empty description="暂无内容" />
      </view>
    </van-tab>
    <van-tab title="待使用" title-style="{{current == 1?'font-weight:700;':''}}">
      <view class="card" wx:if="{{!list.length == 0}}">
        <view class="item" wx:for="{{list}}" wx:key="index" data-id="{{item.id}}" bindtap="toDetail">
          <view class="itemTop">
            <view class="itemL">
              {{item.project_name}}
            </view>
            <view class="itemR">
              {{item.date}}
            </view>
          </view>
          <view class="des">
            {{item.area_name}}{{item.house_name}}
          </view>
        </view>
      </view>
      <view class="card" wx:else>
        <van-empty description="暂无内容" />
      </view>
    </van-tab>
    <van-tab title="已使用" title-style="{{current == 2?'font-weight:700;':''}}">
      <view class="card" wx:if="{{!list.length == 0}}">
        <view class="item" wx:for="{{list}}" wx:key="index" data-id="{{item.id}}" bindtap="toDetail">
          <view class="itemTop">
            <view class="itemL">
              {{item.project_name}}
            </view>
            <view class="itemR">
              {{item.date}}
            </view>
          </view>
          <view class="des">
            {{item.area_name}}{{item.house_name}}
          </view>
        </view>
      </view>
      <view class="card" wx:else>
        <van-empty description="暂无内容" />
      </view>
    </van-tab>
    <van-tab title="已失效" title-style="{{current == 3?'font-weight:700;':''}}">
      <view class="card" wx:if="{{!list.length == 0}}">
        <view class="item" wx:for="{{list}}" wx:key="index" data-id="{{item.id}}" bindtap="toDetail">
          <view class="itemTop">
            <view class="itemL">
              {{item.project_name}}
            </view>
            <view class="itemR">
              {{item.date}}
            </view>
          </view>
          <view class="des">
            {{item.area_name}}{{item.house_name}}
          </view>
        </view>
      </view>
      <view class="card" wx:else>
        <van-empty description="暂无内容" />
      </view>
    </van-tab>
  </van-tabs>
</view>