        未读
      </van-checkbox>
    </view>
    <van-tab title="全部" title-style="{{current == 0?'font-weight:700;':''}}">
      <block wx:for="{{list}}" wx:key="index" bindtap="toDetail">
        <view class="reportTime">昨天 星期二</view>
