          <view class="unread">未读</view>
        </view>
      </block>
    </van-tab>
    <van-tab title="我发出的" title-style="{{current == 1?'font-weight:700;':''}}">内容 2</van-tab>
    <van-tab title="日报" title-style="{{current == 2?'font-weight:700;':''}}">内容 3</van-tab>
    <van-tab title="月报" title-style="{{current == 3?'font-weight:700;':''}}">内容 4</van-tab>
  </van-tabs>
</view>