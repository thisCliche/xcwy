                </view>
              </view>
              <view class="des">{{item.content.tasks}}</view>
              <view class="unread">阅读数 {{item.read}}</view>
            </view>
          </view>
        </scroll-view>
      </block>
      <view class="card" wx:else>
        <van-empty description="暂无内容" />
      </view>
    </van-tab>
    <van-tab title="月报" title-style="{{current == 2?'font-weight:700;':''}}">
