<!--pages/person/vista/vistaList/vistaList.wxml-->
<view class="vistaList">
  <van-overlay show="{{ isLoad }}" z-index="99">
    <view class="loading">
      <van-loading />
    </view>
  </van-overlay>
  <van-tabs active="{{ active }}" color="#FFA477" bind:click="onClick">
    <van-tab title="处理中" title-style="{{current == 0?'font-weight:700;':''}}">
    <block wx:if="{{list.length != 0}}">
      <view class="card item task" wx:for="{{list}}" wx:key="index" data-id="{{item.id}}" bindtap="toDetail">
        <view class="title">
          <view class="titleL">
            {{item.project_name}}{{item.house_name}}
          </view>
          <view class="titleR">{{item.add_time}}</view>
        </view>
        <view class="des">{{item.begin_time}}</view>
        <view class="des">{{item.end_time}}</view>
        <view class="btn mt30">
        <view class="btnL">
          审核状态：<view class="numbered">{{item.status_text}}</view>
        </view> 
        </view>
      </view>
    </block>
    <view class="card" wx:else>
      <van-empty description="暂无内容" />
    </view>
    </van-tab>
    <van-tab title="已结束" title-style="{{current == 1?'font-weight:700;':''}}">
      <block wx:if="{{list.length != 0}}">
      <view class="card item task" wx:for="{{list}}" wx:key="index" data-id="{{item.id}}" bindtap="toDetail">
        <view class="title">
          <view class="titleL">
            {{item.project_name}}
          </view>
          <view class="titleR">{{item.add_time}}</view>
        </view>
        <view class="des">{{item.house_name}}</view>
        <view class="content">{{item.status_text}}</view>
      </view>
    </block>
    <view class="card" wx:else>
      <van-empty description="暂无内容" />
    </view>
    </van-tab>
  </van-tabs>
</view>