<!--pages/person/vista/vistaList/vistaList.wxml-->
<view class="vistaList">
  <van-tabs active="{{ active }}" color="#FFA477" bind:click="onClick">
    <van-tab title="全部" title-style="{{current == 0?'font-weight:700;':''}}">
      <view class="card item" wx:for="{{list}}" wx:key="index" bindtap="toDetail" data-type="{{item.type}}">
        <view class="type1" wx:if="{{item.type=='1'}}">
          <view class="title">
            <view class="titleL">{{item.title}}</view>
            <view class="titleR">{{item.time}}</view>
          </view>
          <view class="des">{{item.leaveType}}</view>
          <view class="des">{{item.startTime}}</view>
          <view class="des">{{item.endTime}}</view>
          <view class="status">{{item.status}}</view>
        </view>
        <view class="type1" wx:elif="{{item.type=='2'}}">
          <view class="title">
            <view class="titleL">{{item.title}}</view>
            <view class="titleR">{{item.time}}</view>
          </view>
          <view class="des">{{item.leaveTime}}</view>
          <view class="des">{{item.startTime}}</view>
          <view class="des">{{item.endTime}}</view>
          <view class="status">{{item.status}}</view>
        </view>
        <view class="type1" wx:elif="{{item.type=='3'}}">
          <view class="title">
            <view class="titleL">{{item.title}}</view>
            <view class="titleR">{{item.time}}</view>
          </view>
          <view class="des">{{item.reason}}</view>
          <view class="status">{{item.status}}</view>
        </view>
        <view class="type1" wx:elif="{{item.type=='4'}}">
          <view class="title">
            <view class="titleL">{{item.title}}</view>
            <view class="titleR">{{item.time}}</view>
          </view>
          <view class="des">{{item.reason}}</view>
          <view class="status">{{item.status}}</view>
        </view>
        <view class="type1" wx:else>
          <view class="title">
            <view class="titleL">{{item.title}}</view>
            <view class="titleR">{{item.time}}</view>
          </view>
          <view class="des">{{item.startTime}}</view>
          <view class="des">{{item.endTime}}</view>
          <view class="status">{{item.status}}</view>
        </view>
      </view>
    </van-tab>
    <van-tab title="请假" title-style="{{current == 1?'font-weight:700;':''}}">内容 2</van-tab>
    <van-tab title="外出" title-style="{{current == 2?'font-weight:700;':''}}">内容 2</van-tab>
    <van-tab title="物资" title-style="{{current == 3?'font-weight:700;':''}}">内容 2</van-tab>
    <van-tab title="采购" title-style="{{current == 4?'font-weight:700;':''}}">内容 2</van-tab>
    <van-tab title="钥匙" title-style="{{current == 5?'font-weight:700;':''}}">内容 2</van-tab>
  </van-tabs>
</view>