<!--pages/staff/renovation/reject/reject.wxml-->
<view class="reject">
  <view class="card">
    <van-cell-group>
      <van-field type="textarea" autosize="{{minHeight}}" model:value="{{ reject_reason }}" placeholder="请输入驳回原因" border="{{ false }}" />
    </van-cell-group>
  </view>
  <view class="btn">
    <van-button type="info" bind:click="toReject" block>确认驳回</van-button>
  </view>
</view>