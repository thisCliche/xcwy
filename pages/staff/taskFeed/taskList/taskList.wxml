<!--pages/person/vista/vistaList/vistaList.wxml-->
<view class="vistaList">
  <van-tabs active="{{ active }}" color="#FFA477" bind:click="onClick">
    <van-tab title="正在执行" title-style="{{current == 0?'font-weight:700;':''}}">
      <view class="card item task" wx:for="{{list}}" wx:key="index" bindtap="toDetail">
        <view class="title">
          <view class="titleL">
            {{item.title}}
          </view>
          <view class="titleR">{{item.time}}</view>
        </view>
        <view class="des">{{item.estimateTime}}</view>
        <view class="des">执行人数：{{item.des}}人</view>
        <view class="btn mt30"><view class="btnL">
          已执行：<view class="numbered">{{item.number}}</view>/{{item.des}}人
        </view> 
          <view class="btnR">
            查看汇报 >
          </view>
        </view>
      </view>
    </van-tab>
    <van-tab title="已过期" title-style="{{current == 1?'font-weight:700;':''}}">
      <view class="card item task" wx:for="{{list2}}" wx:key="index" bindtap="toDetail">
        <view class="title">
          <view class="titleL">
            {{item.title}}
          </view>
          <view class="titleR">{{item.estimateTime}}</view>
        </view>
        <view class="des">{{item.des}}</view>
        <view class="content">{{item.content}}</view>
      </view>
    </van-tab>
  </van-tabs>
</view>